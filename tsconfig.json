{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./types",
            "node_modules/@types"
        ]
    },
    "include": [
        "index",
        "src",
        "tests"
    ]
}